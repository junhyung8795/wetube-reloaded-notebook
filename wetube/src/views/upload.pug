extends base.pug

block content 
    if errorMessage
        span=errorMessage// errorMessage가 있으면 errorMessage를 만들고 (ex)Video validation fail을 출력) 다시 밑에 있는 form을 render
    form(method="POST")
        input(name="title", placeholder="Title", required, type="text") 
        input(name="description", placeholder="Description", required, type="text") 
        input(name="hashtags", placeholder="Hashtags, seperated by comma", required, type="text") 
        input(type="submit", value="Upload Video")